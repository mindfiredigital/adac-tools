{
  "name": "adac-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "ADAC - AWS Diagram Generator Monorepo",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "build:legacy": "tsc",
    "start:legacy": "node dist/src/server.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "adac",
    "aws",
    "diagram"
  ],
  "author": "Yogesh Sharma",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "commander": "^14.0.2",
    "dagre": "^0.8.5",
    "elkjs": "^0.11.0",
    "express": "^5.2.1",
    "fs-extra": "^11.3.3",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/adm-zip": "^0.5.7",
    "@types/dagre": "^0.7.53",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vercel/node": "^5.5.22",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}